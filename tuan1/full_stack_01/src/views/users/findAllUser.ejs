<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Users</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>List of Users</h2>
        <table class="table table-striped mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < datalist.length; i++) { %>
                    <tr>
                        <td><%= datalist[i].email %></td>
                        <td><%= datalist[i].firstName %></td>
                        <td><%= datalist[i].lastName %></td>
                        <td><%= datalist[i].address %></td>
                        <td>
                            <a href="/edit-crud?id=<%= datalist[i].id %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/delete-crud?id=<%= datalist[i].id %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>